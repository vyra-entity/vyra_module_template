<?xml version="1.0" encoding="UTF-8"?>
<dds xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www.omg.org/spec/DDS-SECURITY/20170901/omg_shared_ca_permissions.xsd">
  <permissions>
    <grant name="grant_node">
      <subject_name>CN=my_node</subject_name>

      <validity>
        <not_before>20250101T000000</not_before>
        <not_after>20300101T000000</not_after>
      </validity>

      <allow_rule>
        <!-- Topics -->
        <publish>
          <topics>
            <topic>rt/t_2</topic>
          </topics>
        </publish>

        <subscribe>
          <topics>
            <topic>rt/t_1</topic>
          </topics>
        </subscribe>

        <!-- Services -->
        <request>
          <topics>
            <topic>rq/s_1Request</topic>
            <topic>rq/s_1Reply</topic>
          </topics>
        </request>

        <reply>
          <topics>
            <topic>rq/s_2Request</topic>
            <topic>rq/s_2Reply</topic>
          </topics>
        </reply>

        <!-- Actions -->
        <!-- Action a_1 as CLIENT -->
        <publish>
          <topics>
            <topic>rq/a_1_SendGoalRequest</topic>
            <topic>rq/a_1_CancelGoalRequest</topic>
            <topic>rt/a_1/feedback</topic>
          </topics>
        </publish>
        <subscribe>
          <topics>
            <topic>rq/a_1_SendGoalReply</topic>
            <topic>rq/a_1_CancelGoalReply</topic>
            <topic>rt/a_1/status</topic>
            <topic>rt/a_1/result</topic>
          </topics>
        </subscribe>

        <!-- Action a_2 as SERVER -->
        <subscribe>
          <topics>
            <topic>rq/a_2_SendGoalRequest</topic>
            <topic>rq/a_2_CancelGoalRequest</topic>
          </topics>
        </subscribe>
        <publish>
          <topics>
            <topic>rq/a_2_SendGoalReply</topic>
            <topic>rq/a_2_CancelGoalReply</topic>
            <topic>rt/a_2/status</topic>
            <topic>rt/a_2/feedback</topic>
            <topic>rt/a_2/result</topic>
          </topics>
        </publish>
      </allow_rule>

      <default>DENY</default>
    </grant>
  </permissions>
</dds>
