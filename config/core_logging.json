{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "json": {
            "()": "pythonjsonlogger.jsonlogger.JsonFormatter",
            "format": "%(asctime)s %(levelname)s %(name)s %(funcName)s %(lineno)d %(message)s",
            "datefmt": "%Y-%m-%d %H:%M:%S"
        },
        "colored": {
            "()": "colorlog.ColoredFormatter",
            "format": "%(log_color)s%(asctime)s - %(levelname)-8s - %(name)s:%(funcName)s:%(lineno)d - %(message)s",
            "datefmt": "%Y-%m-%d %H:%M:%S",
            "log_colors": {
                "DEBUG": "cyan",
                "INFO": "green",
                "WARNING": "yellow",
                "ERROR": "red",
                "CRITICAL": "red,bg_white"
            }
        },
        "standard": {
            "()": "logging.Formatter",
            "format": "%(asctime)s - %(levelname)-8s - %(name)s:%(funcName)s:%(lineno)d - %(message)s",
            "datefmt": "%Y-%m-%d %H:%M:%S"
        }
    },
    "handlers": {
        "console_stdout": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "colored",
            "stream": "ext://sys.stdout",
            "filters": []
        },
        "console_stderr": {
            "class": "logging.StreamHandler",
            "level": "WARNING",
            "formatter": "colored",
            "stream": "ext://sys.stderr"
        },
        "rotating_file": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "DEBUG",
            "formatter": "json",
            "filename": "/workspace/log/core/application.log",
            "maxBytes": 10485760,
            "backupCount": 10,
            "encoding": "utf8"
        },
        "error_file": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "ERROR",
            "formatter": "json",
            "filename": "/workspace/log/core/errors.log",
            "maxBytes": 10485760,
            "backupCount": 10,
            "encoding": "utf8"
        }
    },
    "loggers": {
        "{{ module_name }}": {
            "level": "DEBUG",
            "handlers": ["console_stdout", "console_stderr", "rotating_file", "error_file"],
            "propagate": false
        },
        "vyra_base": {
            "level": "DEBUG",
            "handlers": ["console_stdout", "console_stderr", "rotating_file", "error_file"],
            "propagate": false
        },
        "rclpy": {
            "level": "INFO",
            "handlers": ["console_stdout", "console_stderr", "rotating_file"],
            "propagate": false
        },
        "uvicorn": {
            "level": "INFO",
            "handlers": ["console_stdout", "rotating_file"],
            "propagate": false
        },
        "uvicorn.error": {
            "level": "INFO",
            "handlers": ["console_stdout", "console_stderr", "rotating_file", "error_file"],
            "propagate": false
        },
        "uvicorn.access": {
            "level": "INFO",
            "handlers": ["console_stdout", "rotating_file"],
            "propagate": false
        },
        "fastapi": {
            "level": "INFO",
            "handlers": ["console_stdout", "rotating_file"],
            "propagate": false
        }
    },
    "root": {
        "level": "NOTSET",
        "handlers": ["console_stdout", "console_stderr", "rotating_file", "error_file"]
    }
}
