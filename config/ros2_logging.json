{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "ros2_formatter": {
            "format": "%(asctime)s - %(levelname)-8s - %(name)s - %(message)s",
            "datefmt": "%Y-%m-%d %H:%M:%S"
        }
    },
    "handlers": {
        "console_stdout": {
            "class": "logging.StreamHandler",
            "formatter": "ros2_formatter",
            "stream": "ext://sys.stdout"
        },
        "console_stderr": {
            "class": "logging.StreamHandler",
            "level": "WARNING",
            "formatter": "ros2_formatter",
            "stream": "ext://sys.stderr"
        }
    },
    "loggers": {
        "v2_modulemanager": {
            "handlers": ["console_stdout", "console_stderr"],
            "propagate": false
        },
        "vyra_base": {
            "handlers": ["console_stdout", "console_stderr"],
            "propagate": false
        },
        "rclpy": {
            "handlers": ["console_stdout", "console_stderr"],
            "propagate": false
        }
    },
    "root": {
        "level": "NOTSET",
        "handlers": ["console_stdout", "console_stderr"]
    }
}
