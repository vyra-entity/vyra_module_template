# Coverage.py configuration for vyra_module_template

[run]
source = src/vyra_module_template/vyra_module_template
omit =
    */tests/*
    */test_*.py
    */__pycache__/*
    */venv/*
    */virtualenv/*
    */site-packages/*
    */dist-packages/*
branch = True
parallel = True

[report]
precision = 2
show_missing = True
skip_covered = False
skip_empty = True
sort = Cover
exclude_lines =
    # Standard pragma
    pragma: no cover
    
    # Don't complain about missing debug-only code
    def __repr__
    def __str__
    
    # Don't complain if tests don't hit defensive assertion code
    raise AssertionError
    raise NotImplementedError
    
    # Don't complain if non-runnable code isn't run
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    if typing.TYPE_CHECKING:
    
    # Don't complain about abstract methods
    @abstractmethod
    @abc.abstractmethod
    
    # Don't complain about overload definitions
    @overload
    @typing.overload

[html]
directory = htmlcov
title = vyra_module_template Coverage Report

[json]
output = .coverage.json
pretty_print = True
